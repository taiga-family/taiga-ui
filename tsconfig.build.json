{
    "extends": "./tsconfig.json",
    "exclude": ["**/*.spec.ts"],
    "compilerOptions": {
        "outDir": "./dist/out-tsc/lib",
        "declaration": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@taiga-ui/cdk/*": ["./dist/cdk/*"],
            "@taiga-ui/cdk": ["./dist/cdk/index"],
            "@taiga-ui/core/*": ["./dist/core/*"],
            "@taiga-ui/core": ["./dist/core/index"],
            "@taiga-ui/kit/*": ["./dist/kit/*"],
            "@taiga-ui/kit": ["./dist/kit/index"],
            "@taiga-ui/layout/*": ["./dist/layout/*"],
            "@taiga-ui/layout": ["./dist/layout/index"],
            "@taiga-ui/legacy/*": ["./dist/legacy/*"],
            "@taiga-ui/legacy": ["./dist/legacy/index"],
            "@taiga-ui/i18n/*": ["./dist/i18n/*"],
            "@taiga-ui/i18n": ["./dist/i18n/index"],
            "@taiga-ui/addon-charts/*": ["./dist/addon-charts/*"],
            "@taiga-ui/addon-charts": ["./dist/addon-charts/index"],
            "@taiga-ui/addon-mobile/*": ["./dist/addon-mobile/*"],
            "@taiga-ui/addon-mobile": ["./dist/addon-mobile/index"],
            "@taiga-ui/addon-commerce/*": ["./dist/addon-commerce/*"],
            "@taiga-ui/addon-commerce": ["./dist/addon-commerce/index"],
            "@taiga-ui/testing": ["./dist/testing/index"],
            "@taiga-ui/testing/*": ["./dist/testing/*"],
            "@taiga-ui/icons": ["./dist/icons"],
            "@taiga-ui/addon-doc": ["./dist/addon-doc"],
            "@taiga-ui/addon-doc/*": ["./dist/addon-doc/*"],
            "@taiga-ui/experimental": ["./dist/experimental"],
            "@taiga-ui/experimental/*": ["./dist/experimental/*"]
        }
    },
    "angularCompilerOptions": {
        "extendedDiagnostics": {
            "checks": {
                "unusedStandaloneImports": "error"
            }
        }
    }
}
