  "project": [
    "projects/cdk/src/**/*.ts",
    "projects/cdk/schematics/**/*.ts",
    "projects/core/src/**/*.ts",
    "projects/kit/src/**/*.ts",
    "projects/layout/src/**/*.ts", 
