  "ignore": [
    "projects/demo/**/*",
    "projects/demo-cypress/**/*",
    "projects/demo-playwright/**/*",
    "projects/**/test/**/*",
    "projects/**/*.spec.ts",
    "projects/**/*.cy.ts",
    "projects/**/tests/**/*",
    "**/*.d.ts"
  ],
  "ignoreDependencies": [
    "husky",
    "lint-staged", 
    "standard-version",
    "@nx/*",
    "@angular-devkit/*",
    "@schematics/*",
    "cypress*",
    "playwright*",
    "jest-preset-angular",
    "@types/*"
  ]
