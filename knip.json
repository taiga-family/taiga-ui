  "exclude": ["unresolved"],
  "entry": [
    "projects/cdk/src/index.ts",
    "projects/core/src/index.ts",
    "projects/kit/src/index.ts", 
    "projects/layout/src/index.ts",
    "projects/legacy/src/index.ts",
    "projects/i18n/src/index.ts",
    "projects/icons/src/index.ts",
    "projects/experimental/src/index.ts",
    "projects/addon-charts/src/index.ts",
    "projects/addon-commerce/src/index.ts",
    "projects/addon-doc/src/index.ts",
    "projects/addon-mobile/src/index.ts",
    "projects/addon-table/src/index.ts",
    "projects/taiga-schematics/src/index.ts",
    "scripts/**/*.ts"
