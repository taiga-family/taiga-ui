{
    "extends": ["./rxjs.common.tslint.json"],
    "rules": {
        "rxjs-no-wholesale": {"severity": "error"},
        "rxjs-no-add": {"severity": "error"},
        "rxjs-no-operator": {"severity": "error"},
        "rxjs-no-patched": {
            "options": [
                {
                    "allowObservables": false,
                    "allowOperators": false
                }
            ],
            "severity": "error"
        },
        "rxjs-no-deep-operators": true
    }
}
