{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist/cdk",
        "rootDir": "projects/cdk",
        "composite": false,
        "incremental": false,
        "tsBuildInfoFile": null,
        "types": ["jasmine", "jasmine-ajax", "node", "webpack-env"]
    },
    "include": [
        "projects/cdk/constants/version.ts",
        "projects/cdk/schematics/**/*",
        "projects/cdk/schematics/**/collection.json",
        "projects/cdk/schematics/**/migration.json",
        "projects/cdk/schematics/**/schema.json"
    ],
    "exclude": ["projects/cdk/schematics/**/*.spec.ts"]
}
