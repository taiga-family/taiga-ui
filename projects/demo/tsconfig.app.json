{
    "extends": "../../tsconfig.json",
    "files": ["src/typings.d.ts"],
    "include": ["src/**/*.ts"],
    "angularCompilerOptions": {
        "strictMetadataEmit": false,
        "compilationMode": "full",
        "extendedDiagnostics": {
            "checks": {
                "unusedStandaloneImports": "warning"
            },
            "defaultCategory": "error"
        }
    },
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "dom"],
        "useDefineForClassFields": false
    }
}
